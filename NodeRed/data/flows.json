        "type": "function",
        "z": "tab-flow",
        "name": "Build stats request",
        "func": "const userID = (flow.get('current_user_id') || '').trim();\nif (!userID) {\n    node.warn('No current_user_id set');\n    return null;\n}\n\nmsg.method = 'GET';\nmsg.url = 'http://reports-generator:8093/?user_id=' + encodeURIComponent(userID);\n\nreturn msg;\n",
