        "name": "UserID field",
        "order": 3,
        "width": 0,
        "height": 0,
        "format": "<div layout=\"row\" layout-align=\"start center\" style=\"gap:6px;\">\n  <md-input-container flex>\n    <label>UserID</label>\n    <input ng-model=\"userID\" type=\"{{visible ? 'text' : 'password'}}\" placeholder=\"User1\">\n  </md-input-container>\n  <md-button class=\"md-icon-button\" ng-click=\"visible = !visible\" aria-label=\"Show/Hide\">\n    <span ng-if=\"!visible\">üëÅÔ∏è</span>\n    <span ng-if=\"visible\">üôà</span>\n  </md-button>\n</div>\n<script>\n(function(scope){\n  scope.userID = \"\";\n  scope.visible = false;\n  scope.$watch('userID', function(val){\n    scope.send({payload: val, topic: 'userID'});\n  });\n  scope.$watch('msg', function(msg){\n    if(msg && msg.topic === 'clear'){\n      scope.userID = \"\";\n    }\n  });\n})(scope);\n</script>",
