    {
        "id": "validate-login",
        "type": "function",
        "z": "tab-flow",
        "name": "Validate user + phone",
        "func": "const login = msg.login || {};\nconst catalog = msg.payload || {};\nconst users = catalog.usersList || [];\n\nconst found = users.find(u => {\n    const uid = (u.userID || \"\").trim();\n    const ph = (u.user_information && u.user_information.phone ? u.user_information.phone : \"\").trim();\n    return uid === login.userID && ph === login.phone;\n});\n\nif (!found) {\n    const errMsg = { payload: \"Data does not match\" };\n    const clearInputs = { payload: \"\", topic: \"clear\" };\n    const clearInputs2 = { payload: \"\", topic: \"clear\" };\n    return [errMsg, null, clearInputs, clearInputs2];\n} else {\n    // store real userID from catalog (e.g. \"{User1}\")\n    flow.set('current_user_id', (found.userID || '').trim());\n    const okMsg = { payload: \"Access approved\" };\n    const goDash = { payload: { tab: \"Dashboard\" } };\n    return [okMsg, goDash, null, null];\n}\n",
        "outputs": 4,
