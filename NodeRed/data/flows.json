    {
        "id": "process-sleep-stats",
        "type": "function",
        "z": "tab-flow",
        "name": "Process stats",
        "func": "const data = msg.payload || {};\nconst win = data.window || {};\nconst stats = data.stats || {};\nconst stages = data.stages_hours || {};\nconst quality = data.sleep_quality || {};\n\nfunction formatTime(iso){\n  if(!iso) return '';\n  const d = new Date(iso);\n  const opt = {hour: '2-digit', minute:'2-digit'};\n  try {\n    return d.toLocaleTimeString('en-GB', opt);\n  } catch(e) {\n    return d.toISOString();\n  }\n}\n\nconst startStr = formatTime(win.start);\nconst endStr = formatTime(win.end);\n\nlet durationText = '';\nif (win.start && win.end) {\n  const d1 = new Date(win.start);\n  const d2 = new Date(win.end);\n  const diffMs = d2 - d1;\n  const totalMin = diffMs / 60000;\n  const h = Math.floor(totalMin / 60);\n  const m = Math.round(totalMin % 60);\n  durationText = `${h} h ${m} min`;\n}\n\nconst msgSleepInfo = {\n  payload: `Bedtime: ${startStr}<br>Wake time: ${endStr}<br>Total sleep duration: ${durationText}`\n};\n\nfunction makeChart(name, arr){\n  const dataArr = Array.isArray(arr) ? arr : [];\n  return {\n    payload: [{\n      series: [name],\n      data: [dataArr],\n      labels: dataArr.map((_, i) => (i+1).toString())\n    }]\n  };\n}\n\nconst bpm = stats.bpm || {};\nconst temp = stats.temperature || {};\nconst hum = stats.humidity || {};\n\nconst msgBpmChart = makeChart('BPM', bpm.data);\nconst msgBpmStats = {\n  payload: `Min: ${bpm.min} | Max: ${bpm.max} | Mean: ${typeof bpm.mean === 'number' ? bpm.mean.toFixed(2) : bpm.mean}`\n};\n\nconst msgTempChart = makeChart('Temperature', temp.data);\nconst msgTempStats = {\n  payload: `Min: ${temp.min} | Max: ${temp.max} | Mean: ${typeof temp.mean === 'number' ? temp.mean.toFixed(2) : temp.mean}`\n};\n\nconst msgHumChart = makeChart('Humidity', hum.data);\nconst msgHumStats = {\n  payload: `Min: ${hum.min} | Max: ${hum.max} | Mean: ${typeof hum.mean === 'number' ? hum.mean.toFixed(2) : hum.mean}`\n};\n\nconst led = stats.alarm_activations;\nconst msgLed = {\n  payload: `Alarm activations: ${led}`\n};\n\nconst msgStages = {\n  payload: `Deep sleep: ${stages.deep_h} h | Light sleep: ${stages.light_h} h | REM sleep: ${stages.rem_h} h`\n};\n\nconst msgScore = {\n  payload: `Sleep score: ${quality.score} - Meaning: ${quality.label}`\n};\n\nreturn [\n  msgSleepInfo,\n  msgBpmChart,\n  msgBpmStats,\n  msgTempChart,\n  msgTempStats,\n  msgHumChart,\n  msgHumStats,\n  msgLed,\n  msgStages,\n  msgScore\n];",
        "outputs": 10,
        "timeout": "",
        "noerr": 6,
        "initialize": "",
        "finalize": "",
        "libs": [],
        "x": 1120,
        "y": 490,
        "wires": [
