    {
        "id": "get-sleep-api",
        "type": "http request",
        "z": "tab-flow",
        "name": "GET sleep stats",
        "method": "GET",
        "ret": "obj",
        "paytoqs": "ignore",
        "url": "",
        "tls": "",
        "persist": false,
        "proxy": "",
        "authType": "",
        "senderr": false,
